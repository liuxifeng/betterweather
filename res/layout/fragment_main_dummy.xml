<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_wind"
        android:layout_alignLeft="@+id/imageView_condition"
        android:layout_marginLeft="5dp"
        android:text="TextView" 
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_condition"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="TextView" 
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/imageView_wind"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_above="@+id/gridView_weather_list"
        android:layout_marginLeft="22dp"
        android:layout_toRightOf="@+id/textView_humidity"
        android:src="@drawable/feng" />

    <GridView
        android:id="@+id/gridView_weather_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView_humidity"
        android:layout_below="@+id/imageView_humidity"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:numColumns="4" >
    </GridView>

    <ImageView
        android:id="@+id/imageView_humidity"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/imageView_condition"
        android:layout_marginTop="60dp"
        android:layout_toLeftOf="@+id/textView_humidity"
        android:src="@drawable/huminy" />

    <TextView
        android:id="@+id/textView_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_wind"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/imageView_wind"
        android:text="TextView" 
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/imageView_condition"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/textView_condition"
        android:layout_alignTop="@+id/section_label"
        android:layout_marginRight="40dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textView_contetnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView_condition"
        android:layout_alignLeft="@+id/imageView_wind"
        android:layout_marginLeft="20dp"
        android:text="TextView"
        android:textSize="18sp" />

</RelativeLayout>
