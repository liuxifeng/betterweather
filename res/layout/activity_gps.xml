<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView_cur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray"
        android:text="CURRENT LOCATION" 
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"/>

    <ImageView
        android:id="@+id/imageView_city"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_cur"
        android:src="@drawable/ic_action_place" />

    <TextView
        android:id="@+id/textView_changsha"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView_city"
        android:layout_toRightOf="@+id/imageView_city"
      	android:text="Chang Sha"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView_city"
        android:text="SAVED LOCATIONS" 
         android:background="@android:color/darker_gray"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"/>

    <ListView
        android:id="@+id/listView_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView_other"
      >
    </ListView>

</RelativeLayout>
